<div class="container">
	<div class="row">
		<div class="d-sm-hidden col-md-6 col-lg-8">
			<%= render 'shared/front' %> 
		</div>
		<div class="col-sm-12 col-md-6 col-lg-4">
			<h1 class="text-center">Sign in</h1>

<%= form_for(:session, url: sign_in_path) do |f| %>
  <div class="form-group">
     <%= f.text_field :username, autofocus: true, placeholder: "Enter a username", class: "form-control"  %>
 </div>

 <div class="actions">
    <%= f.submit 'Login', class: "btn btn-primary" %>
    <small>Don't have account?</small> <%= link_to 'Signup', new_user_path %>
</div>
<% end %>
		</div>
	</div>
</div>

