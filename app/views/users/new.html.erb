  <% @user.errors.messages.values.each do |message| %>
  <%  message.each do |m| %>
  <div class="alert alert-danger alert-dismissible">
    <button type="button" class="close" data-dismiss="alert">&times;</button>
    <%= m %>
  </div>
  <% end %>
<% end %>
<div class="container">
  <div class="row">  
      <%= render 'shared/front' %> 
    <div class="col-sm-12 col-md-6">
      <h2 class="text-center">Sign Up</h2>


<%= form_for(@user) do |f| %>
  <div class="form-group">
    <%= f.text_field :username, autocomplete: "username", class: "form-control", placeholder: "Username" %>
  </div>

  <div class="form-group">
    <%= f.text_field :fullname, autocomplete: "Enter full name", class: "form-control", placeholder: "Full name" %>
  </div>

 <h5 class="border-bottom pb-2">Not mandatory</h5>
 
   <div class="form-group">
     <%= f.label :photo, "Attach your profile photo" %>
     <%= f.file_field :photo, class: "form-control"  %>
 </div>

   <div class="form-group">
   <%= f.label :cover_image, "Attach your cover image" %>
     <%= f.file_field :cover_image, class: "form-control"  %>
 </div>

     <div class="actions">
    <%= f.submit class: "btn btn-primary" %>
    <p><small><em>Already have an account?</em></small> <%= link_to 'Sign in', sign_in_path %></p>
</div>
<% end %>
    </div>
  </div>
</div>
