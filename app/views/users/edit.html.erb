<div class="container">
  <div class="row ">
    <div class="d-sm-hidden col-md-6 col-lg-8">
      <ul class="row">
        <% @user.errors.full_messages.each do |message| %>
          <li class="col-12"><%= message %></li>
        <% end %>
      </ul>
    </div>
    <div class="col-sm-12 col-md-6 col-lg-4 mt-5">
<h3 class="text-center">Update Account</h3>
<%= form_for(@user, html: {multipart: true}) do |f| %>
  <div class="form-group">
     <%= f.text_field :username, autofocus: true, placeholder: "Enter a username", class: "form-control"  %>
 </div>

<div class="form-group">
     <%= f.text_field :fullname, placeholder: "Enter Fullname", class: "form-control"  %>
 </div>

 <h5 class="border-bottom pb-2">Not mandatory</h5>

  <div class="form-group">
     <%= f.label :photo, "Attach your profile photo" %>
     <%= f.file_field :photo, class: "form-control"  %>
 </div>

   <div class="form-group">
   <%= f.label :cover_image, "Attach your cover image" %>
     <%= f.file_field :cover_image, class: "form-control"  %>
 </div>

 <div class="actions">
    <%= f.submit class: "btn btn-primary" %>
</div>
<% end %>
   </div>
  </div>
</div>