<div class="col-3 offset-7 border-left px-1 bg-light position-fixed pt-4 px-4" id="sticky-sidebar">
<h6 class="border-bottom pb-3">WHO TO FOLLOW</h6>

    <% @not_follow.each do |who_to_follow| %>
    <div class="d-flex flex-row align-items-center my-3 who-to-follow">
            <div class="author">
            <%= profile_pic(who_to_follow, 'tweet-pic')%>
            </div>
            <div class="follow-content">
                <h6><strong>
                 <%= link_to who_to_follow.fullname, profile_path(who_to_follow.username), class: "text-dark" %>
                 </strong></h6>
                 <small class="text-gray">
                    <%= show_follower(who_to_follow) %>
                </small>
            </div>
    </div>
    <% end %>


    <div>
        <small class="text-gray">
            <a href="#">Popular accounts</a>&nbsp;&nbsp;
            <a href="#">Find friends</a>
        </small>
    </div>

    <h6 class="text-gray border-top border-bottom py-3 my-3">TRENDING</h6>

    <p><a href="#" class="text-gray"> #replacetheworld </a></p>
    <p><a href="#" class="text-gray"> #educon </a></p>
    <p><a href="#" class="text-gray"> Big Bucks </a></p>
    
</div>